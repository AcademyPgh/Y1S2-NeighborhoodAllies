@model IEnumerable<ImpactMap.Models.Category>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", "Categories", new { @class = "button" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.metrics)
            
        </th>
    </tr>

@foreach (var item in Model) {
   <tr>
        <td>
            @item.name
        </td>
       <td>
          
            @if (item.metrics.Count != 0)
            {

                foreach (var metric in item.metrics)
                {
                    <span class="metricName">@metric.name</span>
                }
            }
            else
            {
              <span>No Metrics Available</span>
            }
        </td>
   
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
