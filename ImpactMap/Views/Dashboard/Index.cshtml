<div class="container dash">
    <div class="spaceDivs">
        @{ if (Model.investmentsOut.Count != 0)
            {
                <h2>Investments Sent</h2>
            }
            else
            {
                <h2>Investments Sent - Here you can create and view investments to other organizations.</h2>
            }
        }
        <div class="addpadding">

            @Html.ActionLink("Create New Investment", "Create", "Investments", "Investments", new { @class = "button" })

            @Html.ActionLink("View All Investments", "Index", "Investments", "Investments", new { @class = "button" })

            @Html.ActionLink("View Investment Tags", "Index", "Categories", "Categories", new { @class = "button" })

            @if (Model.investmentsOut.Count != 0)
            {
                <table class="table">
                    <tr>
                        <th>
                            Investment Date
                        </th>
                        <th>
                            Value
                        </th>
                        <th>
                            Recipient
                        </th>
                        <th>
                            Reports
                        </th>
                    </tr>

                    @*Displays each investment in the table*@
                    @foreach (var item in Model.investmentsOut.Take(5))
                {

                        <tr>
                            <td>
                                @item.date.ToShortDateString()
                            </td>
                            <td>
                                <p>$@Html.DisplayFor(modelItem => item.amount)</p>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.entityTo.name)
                            </td>
                            <td>
                                @if (item.projectTo.report != null)
                                {
                                    //string reportID = Convert.ToString(item.projectTo.report.ID);
                                    @Html.ActionLink("Report", "Details", "Reports", new { id = item.projectTo.report.ID }, null)
                                }
                                else
                                {
                                    <span>No report available.</span>
                                }
                            </td>
                        </tr>

                    }


                </table>
            }
            else
            {
                <dd>You Currently Have No Investments</dd>
            }

        </div>
    </div>
</div>

<div class="container dash">

    <div class="spaceDivs">
        @{ if (Model.projects.Count > 1)
            {
                <h2>Projects</h2>
            }
            else
            {
                <h2>Projects - Here you can create and view your organization's projects.</h2>
            }
        }
        <div class="addpadding">
            @Html.ActionLink("Create New Project", "Create", "Projects", "Projects", new { @class = "button" })

            @Html.ActionLink("View All Projects", "Index", "Projects", "Projects", new { @class = "button" })

            @if (Model.projects.Count != 0)
            {
                <table class="table">
                    <tr>
                        <th>
                            Project Name
                        </th>
                        <th>
                            Investor
                        </th>
                        <th>
                            Investment Date
                        </th>
                        <th>
                            Investment Value
                        </th>
                        <th>
                            Report
                        </th>
                    </tr>
                    @{
                        foreach (var item in Model.projects.Take(5))
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.name)
                                </td>
                                <td>

                                    @foreach (var thing in item.investmentsIn)
                                    {
                                        @Html.DisplayFor(modelItem => thing.entityFrom.name)<br />
                                    }
                                </td>
                                <td>
                                    @foreach (var thing in item.investmentsIn)
                                    {
                                        @thing.date.ToShortDateString()<br />
                                    }
                                </td>
                                <td>
                                    @foreach (var thing in item.investmentsIn)
                                    {
                                        <div class="moneydiv">$@Html.DisplayFor(modelItem => thing.amount)</div><br />
                                    }
                                </td>
                                <td>
                                    @if (item.report != null)
                                    {
                                        @Html.ActionLink("Report", "Details", "Reports", new { id = item.report.ID }, null)
                                    }
                                    else
                                    {
                                        @Html.ActionLink("Create Report", "Create", "Reports", new { id = item.ID }, null)
                                    }

                                </td>
                            </tr>
                        }
                    }
                </table>
                        }
                        else
                        {
                            <p>You currently have no projects.</p>
                        }
        </div>
    </div>
</div>

