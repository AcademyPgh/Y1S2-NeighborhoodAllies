@model ImpactMap.Models.Report
@{
    ViewBag.Title = "Report Details";
}

<div class="container">
    <h2> @ViewBag.Title</h2>
    <div>

        <hr />
        <dl class="dl-horizontal">
            @foreach (var metricResult in Model.metricResults)
            {
                <dt>Metric Name: @Html.DisplayFor(model => metricResult.metric.name)</dt>
                <dd>@Html.DisplayFor(model => metricResult.resultText)</dd>
            }
            <dt>
                @Html.DisplayNameFor(model => model.reportText)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.reportText)
            </dd>
        </dl>
    </div>
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.ID })
        @Html.ActionLink("Back to List", "Index")
    </p>

</div>